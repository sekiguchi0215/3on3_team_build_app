<div class="recruitments-container">
  <h3 class="text-center page-title">募集一覧</h3>
  <% if user_signed_in? %>
    <div class="container">
      <div class="row">
        <div class="col">
          <%= link_to "募集を投稿する", new_recruitment_path, class: "btn btn-success form-control" %>
        </div>
        <div class="col">
          <%= link_to "チームを作成する", new_team_path, class: "btn btn-primary form-control" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row row-cols-3 margin">
    <%= render partial: "recruitment", collection: @recruitments %>
  </div>
</div>
