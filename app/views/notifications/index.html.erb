<ul class="nav nav-pills nav-fill" id="pills-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="pills-notification-tab" data-toggle="pill" href="#pills-notification" role="tab" aria-controls="pills-notification" aria-selected="true">
      通知
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-all-notification-tab" data-toggle="pill" href="#pills-all-notification" role="tab" aria-controls="pills-all-notification" aria-selected="false">
      全ての通知
    </a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-notification" role="tabpanel" aria-labelledby="pills-notification-tab">
    <% if @notifications.exists? %>
      <table class="table">
        <tr>
          <%= render partial: "notification", collection: @notifications %>
        </tr>
      </table>
      <hr>
      <div class="notification-bottom">
        <%= link_to "全て既読にする", update_all_notification_path(@notifications), method: :patch, data: { confirm: "全て既読にしますか？" }, class: "btn btn-sm btn-warning notification-button form-control" %>
        <%= link_to "全ての通知を削除する", destroy_all_notification_path(@all_notifications), method: :delete, data: { confirm: "全ての通知を削除しますか？" }, class: "btn btn-sm btn-danger notification-button form-control" %>
      </div>
    <% else %>
      <div class="text-center">
        通知はありません。
      </div>
    <% end %>
  </div>
  <div class="tab-pane fade" id="pills-all-notification" role="tabpanel" aria-labelledby="pills-all-notification-tab">
    <% if @all_notifications.exists? %>
      <table class="table">
        <tr>
          <%= render partial: "notification", collection: @all_notifications %>
        </tr>
      </table>
      <%= paginate @all_notifications %>
      <hr>
      <div class="notification-bottom">
        <%= link_to "全ての通知を削除する", destroy_all_notification_path(@all_notifications), method: :delete, data: { confirm: "全ての通知を削除しますか？" }, class: "btn btn-sm btn-danger notification-button form-control" %>
      </div>
    <% else %>
      <div class="text-center">
        通知はありません。
      </div>
    <% end %>
  </div>
</div>
