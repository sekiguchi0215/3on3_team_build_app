<div class="team-index">
  <h3 class="text-center page-title">所属中のチーム</h3>
  <% if @teams.exists? %>
    <table class="table">
      <%= render partial: "team", collection: @teams %>
    </table>
  <% else %>
    <%= link_to "メンバーを募集する", new_recruitment_path, class: "" %>
    <%= link_to "チームを作成する", new_team_path %>
  <% end %>
</div>
