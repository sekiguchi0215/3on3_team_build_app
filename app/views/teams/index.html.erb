<div class="team-index">
  <h3 class="text-center page-title">所属中のチーム</h3>
  <% if @teams.exists? %>
    <div class="margin">
      <%= link_to "チームを作成する", new_team_path, class: "btn btn-info form-control" %>
    </div>
    <table class="table">
      <%= render partial: "team", collection: @teams %>
    </table>
    <hr>
  <% else %>
    <%= link_to "チームを作成する", new_team_path, class: "btn btn-info form-control" %>
    <%= link_to "メンバーを募集する", new_recruitment_path, class: "btn btn-success form-control" %>
  <% end %>
</div>
