<div class="team-index">
  <h2 style="margin-bottom: 20px;">所属中のチーム</h2>
  <% if @teams.exists? %>
    <table class="table">
      <%= render partial: "team", collection: @teams %>
    </table>
  <% else %>
    <%= link_to "メンバーを募集する", new_recruitment_path %>
    <%= link_to "チームを作成する", new_team_path %>
  <% end %>
</div>
