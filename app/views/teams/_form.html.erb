<%= form_with model: @team, local: true do |f| %>
  <p>
    <%= f.collection_check_boxes :user_ids, User.order(:created_at), :id, :nickname do |user| %>
      <table class="table">
        <tr>
          <th style="vertical-align: middle;"><%= user.check_box %></th>
          <th style="vertical-align: middle;"><%= image_tag user.object.icon.url, size: "50x50" %></th>
          <th style="vertical-align: middle;"><%= user.object.nickname %></th>
        </tr>
      </table>
    <% end %>
  </p>
  <p>
    <%= f.submit "チームを作成する" %>
  </p>
<% end %>
