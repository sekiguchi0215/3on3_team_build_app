<div class="text-center padding-top-sm">
  <div class="deck-status">
    <h3><span style="<%= status_color(@deck) %>"><%= deck_status(@deck) %></span>のデッキ</h3>
  </div>
  <div class="deck-list-image">
    <%= image_tag @deck.deck_list.url, :style => "max-height: 450px; max-width: 800px; " %>
  </div>
  <div class="deck-free-space">
    <%= simple_format (h @deck.content) %>
  </div>
  <% if @deck.user_id == current_user.id %>
    <div class="container">
      <div class="row">
        <div class="col">
          <%= link_to "編集", edit_deck_list_path(@deck), class: "btn btn-success form-control" %>
        </div>
        <div class="col">
          <%= link_to "削除", deck_list_path, method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger form-control" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
