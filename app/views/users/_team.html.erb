<% users = team.users %>
<% user = team.users.first %>
<tr>
  <td class="align-middle text-center" width="30%">
    <%= link_to team_path(team) do %>
      <%= image_tag user.icon.url, size: "75x75", class: "img-circle img-fluid" %>
    <% end %>
  </td>
  <td class="text-center" width="30%">
    <p>
      <%= render partial: "teams/user", collection: users %>
    </p>
  </td>
  <td class="last-message text-left align-middle" width="40%">
    <%= team.show_last_team_message %>
  </td>
</tr>
